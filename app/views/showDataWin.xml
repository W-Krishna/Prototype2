<Alloy>
	<Window class="container" onFocus="showData" exitOnClose="false" fullscreen="false" navBarHidden="FALSE" >
		<View layout="vertical">
		<View id = "userView" layout="horizontal" height="Ti.UI.SIZE" class = "dTop alignCenter">
						<Label class="blueClr font16 size1of2  ">Your Name : </Label>
						<Label id = "userName"class="blueClr font16 size1of2"></Label>
						</View>
						<View layout="horizontal" height="Ti.UI.SIZE" class = "alignCenter">
						<Label class="blueClr font16 size1of2  ">Your Email : </Label>
						<Label id="userEmail" class="blueClr font16 size1of2"></Label>
						</View>
						<View layout="horizontal" height="Ti.UI.SIZE" class = "alignCenter">
						<Label class="blueClr font16 size1of2  ">Your Phone : </Label>
						<Label id="userPhone" class="blueClr font16 size1of2"></Label>
						</View>
						<Button onClick = "getPhoto">Add your photo</Button>
						<ImageView id="userImage"></ImageView>
					
						
		</View>
	</Window>
</Alloy>